{
  "name": "@scramjet/supervisor",
  "version": "0.7.0-pre.1",
  "description": "The supervisor application for the underlying container and program wrapper executed within it.",
  "main": "./src/index.ts",
  "scripts": {
    "test": "ava -v",
    "test-coverage": "nyc yarn test",
    "build": "tsc -p tsconfig.json",
    "build:docs": "typedoc",
    "start": "npm run build && node ../../dist/supervisor/bin/supervisor.js ",
    "stop": "./stop-superviosor.sh",
    "watch": "tsc -b --watch",
    "prepack": "LOCAL_PACKAGES=true node ../../scripts/publish.js",
    "clean": "rimraf -rf ./dist"
  },
  "author": "Scramjet <open-source@scramjet.org>",
  "license": "AGPL-3.0",
  "devDependencies": {
    "@types/dockerode": "^3.2.2",
    "@types/node": "^14.14.33",
    "@types/proxyquire": "^1.3.28",
    "@types/shell-escape": "^0.2.0",
    "@types/vorpal": "^1.12.0",
    "ava": "^3.15.0",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "rimraf": "^3.0.2",
    "shell-escape": "^0.2.0",
    "sinon": "^9.2.4",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.28",
    "typedoc-plugin-markdown": "^3.6.0",
    "typescript": "^4.1.3"
  },
  "ava": {
    "extensions": [
      "ts",
      "js"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@scramjet/csi-config": "^0.7.0-pre.1",
    "@scramjet/model": "^0.7.0-pre.1",
    "@scramjet/types": "^0.7.0-pre.1",
    "dockerode": "^3.2.1",
    "scramjet": "^4.35.12",
    "vorpal": "^1.12.0"
  },
  "publishConfig": {
    "registry": "https://repo.int.scp.ovh/repository/npm-scramjet/",
    "access": "restricted"
  }
}
