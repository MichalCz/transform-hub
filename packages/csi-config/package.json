  "author": "Budleigh Salterton <cz@scramjet.org>",
  "homepage": "https://github.com/scramjet-cloud-platform/scramjet-csi-dev#readme",
  "license": "ISC",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json && npm run copy:configs",
    "clean": "rm -rf ./dist",
    "copy:configs": "cd src; tar c `find -iname *.json` | tar x -C ../dist/",
    "test": "npm run test:ava",
    "test:ava": "ava",
    "prepack": "LOCAL_PACKAGES=true node ../../scripts/publish.js"
  },
  "ava": {
    "extensions": [
        "ts"
    ],
    "files": [
        "**/*.spec.ts"
    ],
    "require": [
        "ts-node/register"
    ]
  },
  "publishConfig": {
    "registry": "https://repo.int.scp.ovh/repository/npm-scramjet/",
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/scramjet-cloud-platform/scramjet-csi-dev.git"
  },
  "bugs": {
    "url": "https://github.com/scramjet-cloud-platform/scramjet-csi-dev/issues"
  }
}
