{
    "name": "@scramjet/sth",
    "version": "0.10.0-pre.10",
    "description": "Scramjet STH Excecutable",
    "main": "src/lib/index.ts",
    "bin": {
        "scramjet-transform-hub": "src/bin/hub.ts"
    },
    "scripts": {
        "start": "ts-node ./src/index",
        "build": "tsc -p tsconfig.build.json",
        "build:docker": "docker build -t repo.int.scp.ovh/scramjet/host:$npm_package_version -f Dockerfile ../../",
        "build:docker-release": "docker build -t repo.int.scp.ovh/scramjet/host:$npm_package_version -f Dockerfile.release .",
        "clean": "rm -rf ./dist",
        "watch": "tsc -b --watch",
        "test": "echo no tests yet -- # npm run test:ava",
        "test:ava": "ava",
        "prepack": "node ../../scripts/publish.js"
    },
    "author": "Scramjet <open-source@scramjet.org>",
    "license": "AGPL-3.0",
    "dependencies": {
        "@scramjet/csi-config": "^0.10.0-pre.10",
        "@scramjet/host": "^0.10.0-pre.10",
        "commander": "^7.2.0"
    },
    "devDependencies": {
        "@scramjet/types": "^0.10.0-pre.10",
        "@types/node": "14.14.33",
        "ava": "^3.15.0",
        "ts-node": "^9.1.1",
        "typedoc": "0.20.28",
        "typedoc-plugin-markdown": "3.4.5",
        "typescript": "4.1.4"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "files": [
            "**/*.spec.ts"
        ],
        "require": [
            "ts-node/register"
        ]
    },
    "publishConfig": {
        "registry": "https://repo.int.scp.ovh/repository/npm-scramjet/",
        "access": "restricted"
    }
}
