{
  "name": "@scramjet/runner",
  "version": "0.2.0",
  "description": "Runner Mock",
  "main": "./src/index.ts",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:docker": "docker build -t scramjet/runner -f Dockerfile ../../",
    "start:docker": "docker run -i --name runner -v vol-$(git rev-parse --short HEAD):/package scramjet/runner:latest",
    "start": "ts-node ./src/index",
    "watch": "tsc -b --watch",
    "test": "yarn build && ava --",
    "test-coverage": "yarn build && nyc ava",
    "clean": "rimraf -rf ./dist",
    "clean:docker": "docker volume rm $(git rev-parse --short HEAD); docker rm -f runner",
    "prepack": "LOCAL_PACKAGES=true node ../../scripts/publish.js"
  },
  "author": "",
  "license": "AGPL-3.0",
  "dependencies": {
    "@scramjet/model": "0.2.0",
    "scramjet": "^4.35.11"
  },
  "devDependencies": {
    "@scramjet/types": "0.2.0",
    "@types/node": "^14.14.22",
    "@types/sinon": "^9.0.10",
    "ava": "^3.15.0",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^9.2.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "publishConfig": {
    "registry": "https://repo.int.scp.ovh/repository/npm-scramjet/",
    "access": "restricted"
  }
}
