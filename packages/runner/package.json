{
  "name": "@scramjet/runner",
  "version": "0.7.0-pre.1",
  "description": "Runner Mock",
  "main": "./src/index.ts",
  "bin": "bin/start-runner.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "build:docker": "docker build -t repo.int.scp.ovh/scramjet/runner:$npm_package_version -f Dockerfile ../../",
    "start": "ts-node ./src/index",
    "watch": "tsc -b --watch",
    "test": "yarn test:coverage",
    "test:coverage": "yarn build && nyc --reporter=lcov --reporter=text ava",
    "test:docker": "docker run -i --name runner -v prerunner-$(git rev-parse --short HEAD):/package scramjet/runner:$npm_package_version",
    "clean": "rimraf -rf ./dist",
    "clean:docker": "docker rm -f runner; docker volume rm prerunner-$(git rev-parse --short HEAD)",
    "prepack": "LOCAL_PACKAGES=true node ../../scripts/publish.js"
  },
  "author": "",
  "license": "AGPL-3.0",
  "dependencies": {
    "@scramjet/model": "^0.7.0-pre.1",
    "scramjet": "^4.35.11"
  },
  "devDependencies": {
    "@scramjet/types": "^0.7.0-pre.1",
    "@types/node": "^14.14.22",
    "@types/sinon": "^9.0.10",
    "ava": "^3.15.0",
    "nyc": "^15.1.0",
    "proxyquire": "^2.1.3",
    "sinon": "^9.2.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "**/*.spec.ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "publishConfig": {
    "registry": "https://repo.int.scp.ovh/repository/npm-scramjet/",
    "access": "restricted"
  }
}
