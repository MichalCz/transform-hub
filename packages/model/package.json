{
    "name": "@scramjet/model",
    "version": "0.2.0",
    "description": "Important model of the scramjet platform",
    "main": "./src/index.ts",
    "scripts": {
        "start": "node ./dist/model/messages-utils",
        "build": "tsc -p tsconfig.json",
        "watch": "tsc -b --watch",
        "test": "npm i && npm run test:ava",
        "test:ava": "ava",
        "prepack": "LOCAL_PACKAGES=true node ../../scripts/publish.js"
    },
    "author": "Scramjet <open-source@scramjet.org>",
    "license": "AGPL-3.0",
    "devDependencies": {
        "@scramjet/symbols": "0.2.0",
        "@scramjet/types": "0.2.0",
        "@types/node": "^14.14.22",
        "ava": "^3.15.0",
        "ts-node": "^9.1.1",
        "typedoc": "^0.20.24",
        "typedoc-plugin-markdown": "^3.4.5",
        "typescript": "^4.1.3"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "files": [
            "**/*.spec.ts"
        ],
        "require": [
            "ts-node/register"
        ]
    }
}
