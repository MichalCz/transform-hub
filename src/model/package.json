{
    "name": "@scramjet/model",
    "version": "1.0.0",
    "description": "Important model of the scramjet platform",
    "main": "index.ts",
    "scripts": {
        "start": "node ../../dist/model/messages-utils",
        "build": "tsc -p tsconfig.json",
        "postbuild": "cp -r node_modules ../../dist/model/",
        "test": "npm i && npm run test:ava",
        "test:ava": "ava"
    },
    "author": "Scramjet <open-source@scramjet.org>",
    "license": "AGPL-3.0",
    "devDependencies": {
        "@scramjet/symbols": "file:../symbols",
        "@scramjet/types": "file:../types",
        "@types/node": "^14.14.22",
        "ava": "^3.15.0",
        "ts-node": "^9.1.1",
        "typescript": "^4.1.3"
    },
    "ava": {
        "extensions": [
            "ts"
        ],
        "files": [
            "**/*.spec.ts"
        ],
        "require": [
            "ts-node/register"
        ]
    }
}
