{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "removeComments": true,
      "noLib": false,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "allowJs": true,
      "outDir": "dist",
      "target": "es6",
      "lib": ["es7"]
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts"]
  }